<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_item_list_root"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:layout_margin="1dp">


    <com.example.fsantana.meaningfulmotion.CustomViews.ImageViewRatioThreeTwo
        android:id="@+id/card_item_avatart_imageview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fernanda"
        android:transitionName="@string/transition_avatar"/>

    <com.example.fsantana.meaningfulmotion.CustomViews.ImageViewRatioThreeTwo
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/scrim"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">



        <TextView
            android:id="@+id/card_item_list_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Fernanda"/>

        <TextView
            android:id="@+id/card_item_list_subtitle_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="bacon cheddar batata"/>

    </LinearLayout>


</android.support.v7.widget.CardView>